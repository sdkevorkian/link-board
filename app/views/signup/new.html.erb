<h1>Sign Up</h1>

<%= form_for :user do |f| %>
  <%= f.email_field :email, placeholder: "Enter your email" %>
  <%= f.password_field :password, placeholder: "Enter your password" %>
  <%= f.submit "Sign up" %>
<% end %>

<%= link_to "Sign up with Facebook", "/auth/facebook", class: "btn btn-primary" %>

<p>Current User: <%= @current_user.inspect %></p>
